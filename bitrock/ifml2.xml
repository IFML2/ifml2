<project>
    <shortName>ifml2</shortName>
    <fullName>IFML</fullName>
    <version>install-fix</version>
    <readmeFile>../docs/notes.txt</readmeFile>
    <logoImage>../ifmlicon.png</logoImage>
    <splashImage>../ifmlicon.png</splashImage>
    <defaultLanguage>ru</defaultLanguage>
    <componentList>
        <component>
            <name>ifml2</name>
            <description>Платформа ЯРИЛ</description>
            <canBeEdited>0</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files (All)</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <actionList>
                        <createJavaLaunchers>
                            <destination>${installdir}</destination>
                            <javaLauncherList>
                                <javaLauncher>
                                    <allowCommandLineArguments>1</allowCommandLineArguments>
                                    <arguments>"editor"</arguments>
                                    <binaryName>Редактор</binaryName>
                                    <classpath></classpath>
                                    <jarFile>ifml2.jar</jarFile>
                                    <mainClass></mainClass>
                                    <preferredJavaBinary></preferredJavaBinary>
                                    <runInBackground>0</runInBackground>
                                    <runInConsole>0</runInConsole>
                                    <selectionOrder>newest</selectionOrder>
                                    <useLauncherDirectoryAsWorkingDirectory>1</useLauncherDirectoryAsWorkingDirectory>
                                    <usePropertiesFile>0</usePropertiesFile>
                                    <vmParameters></vmParameters>
                                    <windowsResourceFileVersion>1.0.0.0</windowsResourceFileVersion>
                                    <workingDirectory>${installdir}</workingDirectory>
                                    <validVersionList>
                                        <validVersion>
                                            <bitness></bitness>
                                            <maxVersion></maxVersion>
                                            <minVersion>1.8</minVersion>
                                            <requireJDK>0</requireJDK>
                                            <vendor></vendor>
                                        </validVersion>
                                    </validVersionList>
                                </javaLauncher>
                                <javaLauncher>
                                    <allowCommandLineArguments>1</allowCommandLineArguments>
                                    <arguments>"player"</arguments>
                                    <binaryName>Плеер</binaryName>
                                    <classpath></classpath>
                                    <jarFile>ifml2.jar</jarFile>
                                    <mainClass></mainClass>
                                    <preferredJavaBinary></preferredJavaBinary>
                                    <runInBackground>0</runInBackground>
                                    <runInConsole>0</runInConsole>
                                    <selectionOrder>newest</selectionOrder>
                                    <useLauncherDirectoryAsWorkingDirectory>1</useLauncherDirectoryAsWorkingDirectory>
                                    <usePropertiesFile>0</usePropertiesFile>
                                    <vmParameters></vmParameters>
                                    <windowsResourceFileVersion>1.0.0.0</windowsResourceFileVersion>
                                    <workingDirectory></workingDirectory>
                                    <validVersionList>
                                        <validVersion>
                                            <bitness></bitness>
                                            <maxVersion></maxVersion>
                                            <minVersion>1.8</minVersion>
                                            <requireJDK>0</requireJDK>
                                            <vendor></vendor>
                                        </validVersion>
                                    </validVersionList>
                                </javaLauncher>
                            </javaLauncherList>
                        </createJavaLaunchers>
                    </actionList>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../out/artifacts/ifml2/ifml2.jar</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../docs/notes.txt</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files (Linux)</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                    <actionList>
                        <setInstallerVariable>
                            <name>linProgFilesPath</name>
                            <value>${project.component(ifml2).folder(programfileslinux).destination}</value>
                        </setInstallerVariable>
                        <propertiesFileSet>
                            <file>${locationsPropsFile}</file>
                            <key>libs.location</key>
                            <value>${linProgFilesPath.escape_backslashes}</value>
                        </propertiesFileSet>
                        <propertiesFileSet>
                            <file>${locationsPropsFile}</file>
                            <key>games.location</key>
                            <value>${linProgFilesPath.escape_backslashes}</value>
                        </propertiesFileSet>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>../libs</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>../Games</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Saved Games</description>
                    <destination>${windows_folder_personal}\${product_fullname}\Saved Games</destination>
                    <name>WinSavedGames</name>
                    <platforms>windows</platforms>
                    <actionList>
                        <setInstallerVariable>
                            <name>winSavedGamesPath</name>
                            <value>${project.component(ifml2).folder(winsavedgames).destination}</value>
                        </setInstallerVariable>
                        <propertiesFileSet>
                            <file>${locationsPropsFile}</file>
                            <key>savedgames.location</key>
                            <value>${winSavedGamesPath.escape_backslashes}</value>
                        </propertiesFileSet>
                    </actionList>
                </folder>
                <folder>
                    <description>Saved Games</description>
                    <destination>${installdir}/Saved Games</destination>
                    <name>LinuxSavedGames</name>
                    <platforms>linux</platforms>
                    <actionList>
                        <setInstallerVariable>
                            <name>linProgFilesPath</name>
                            <value>${project.component(ifml2).folder(programfileslinux).destination}</value>
                        </setInstallerVariable>
                        <propertiesFileSet>
                            <file>${locationsPropsFile}</file>
                            <key>savedgames.location</key>
                            <value>${linProgFilesPath.escape_backslashes}</value>
                        </propertiesFileSet>
                    </actionList>
                </folder>
                <folder>
                    <description>libs</description>
                    <destination>${windows_folder_appdata}\${product_fullname}\libs</destination>
                    <name>WinAppDataLibs</name>
                    <platforms>windows</platforms>
                    <actionList>
                        <setInstallerVariable>
                            <name>WinAppDataLibsPath</name>
                            <value>${project.component(ifml2).folder(WinAppDataLibs).destination}</value>
                        </setInstallerVariable>
                        <propertiesFileSet>
                            <file>${locationsPropsFile}</file>
                            <key>libs.location</key>
                            <value>${WinAppDataLibsPath.escape_backslashes}</value>
                        </propertiesFileSet>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <allowWildcards>1</allowWildcards>
                            <origin>../libs/*</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Games</description>
                    <destination>${windows_folder_personal}\${product_fullname}\Games</destination>
                    <name>windocsGames</name>
                    <platforms>windows</platforms>
                    <actionList>
                        <setInstallerVariable>
                            <name>winDocsGamesPath</name>
                            <value>${project.component(ifml2).folder(winDocsGames).destination}</value>
                        </setInstallerVariable>
                        <propertiesFileSet>
                            <file>${locationsPropsFile}</file>
                            <key>games.location</key>
                            <value>${winDocsGamesPath.escape_backslashes}</value>
                        </propertiesFileSet>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <allowWildcards>1</allowWildcards>
                            <origin>../Games/*</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
            </folderList>
            <readyToInstallActionList>
                <setInstallerVariable>
                    <name>locationsPropsFile</name>
                    <value>${installdir}/locations.properties</value>
                </setInstallerVariable>
            </readyToInstallActionList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Удалить ${product_fullname}</comment>
                    <name>Удалить ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/${uninstallerName}.exe</windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment></comment>
                    <name>Редактор</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/Редактор.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment></comment>
                    <name>Плеер</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/Плеер.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
                <startMenuFileShortcut>
                    <comment></comment>
                    <filePath>${installdir}/notes.txt</filePath>
                    <name>Заметки к выпуску</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsIcon></windowsIcon>
                </startMenuFileShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <outputDirectory>.</outputDirectory>
    <readmeFileEncoding>utf-8</readmeFileEncoding>
    <saveRelativePaths>1</saveRelativePaths>
    <vendor>realsonic</vendor>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_fullname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>

