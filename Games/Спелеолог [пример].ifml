    <storyOptions>
        <startLocationOption showStartLocDesc="false" location="Зал"/>
        <startProcedureOption procedure="ПоказатьПредысторию"/>
        <storyDescription author="realsonic" version="0.1 альфа от 05.11.2012" description="Приключения спелеолога в пещере (порт standalone-игры)." name="Спелеолог"/>
        <globalVars>
            <var value="нет" name="СрубилЛиану" position="1"/>
        </globalVars>
    </storyOptions>
    <procedures>
        <procedure name="ПоказатьПредысторию">
            <procedureVariables/>
            <procedureBody>
                <showMessage type="text" message="Вы - спелеолог, и Вы отправились в экспедицию в пещеру. Когда Вы отошли достаточно далеко, то услышали шум: выход завалило камнями!" carriageReturn="true" beginWithCap="false" position="1"/>
                <showMessage type="text" message="Упоминайте предметы одним основным словом." carriageReturn="true" beginWithCap="false" position="2"/>
            </procedureBody>
            <parameters/>
        </procedure>
        <procedure name="отл">
            <procedureVariables/>
            <procedureBody>
                <if condition="ком = 'го'" position="1">
                    <else>
                        <if condition="ком='т'" position="2">
                            <then>
                                <startTimer position="1" type="real-time" name="timer"/>
                                <showMessage position="2" type="text" message="Таймер запущен."/>
                            </then>
                            <else>
                                <showMessage type="text" message="Не знаю такой отладочной команды." carriageReturn="true" beginWithCap="false" position="1"/>
                            </else>
                        </if>
                    </else>
                    <then>
                        <goToLoc location="Растительность" position="1"/>
                        <moveItem to="инвентарий" item="КиркаПред" position="2"/>
                    </then>
                </if>

            </procedureBody>
            <parameters/>
        </procedure>
        <procedure name="срубить">
            <procedureVariables/>
            <procedureBody>
                <showMessage type="expression" message="'Я не знаю, как ' + глагол + ' ' + что.вп + ' ' + чем.тп + '.'" carriageReturn="true" beginWithCap="false" position="1"/>
            </procedureBody>
            <parameters>
                <parameter name="глагол"/>
                <parameter name="что"/>
                <parameter name="чем"/>
            </parameters>
        </procedure>
    </procedures>
