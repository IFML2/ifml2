            <roles/>
            <attributes/>
            <description>Старая, но ещё крепкая шахтёрская кирка.</description>
            <words mainWord="кирка">
                <word>кирка</word>
            </words>
            <startingPosition>
                <locations>
                    <location>СтараяШахта</location>
                </locations>
                <inventory>false</inventory>
            </startingPosition>
        </item>
        <item name="динамит" id="ДинамитПред">
            <hooks/>
            <properties/>
            <roles/>
            <attributes/>
            <description>Небольшая связка динамита с коротким шнуром. Таким опасно пользоваться!</description>
            <words mainWord="динамит">
                <word>динамит</word>
            </words>
            <startingPosition>
                <locations>
                    <location>Штольня</location>
                </locations>
                <inventory>false</inventory>
            </startingPosition>
        </item>
        <item name="cтвол засохшей лианы" id="CтволЗасохшейЛианы">
            <hooks>
                <hook type="instead" objectElement="что" action="срубить">
                    <instructions>
                        <if condition="СрубилЛиану" position="1">
                            <else>
<if condition="чем = КиркаПред" position="2">
    <else>
        <showMessage type="expression" message="глагол + ' лиану ' + чем.тп + ' не получилось.'" carriageReturn="true" beginWithCap="true" position="1"/>
    </else>
    <then>
        <showMessage type="text" message="Вы срубили одну лиану киркой!" carriageReturn="true" beginWithCap="false" position="1"/>
        <moveItem to="инвентарий" item="CтволЗасохшейЛианы" position="2"/>
        <var value="да" name="СрубилЛиану" position="3"/>
    </then>
</if>
                            </else>
                            <then>
<showMessage type="text" message="Вы уже срубили лиану." carriageReturn="true" beginWithCap="false" position="1"/>
                            </then>
                        </if>
                    </instructions>
                </hook>
                <hook type="instead" objectElement="предмет" action="осмотреть">
                    <instructions>
                        <if condition="СрубилЛиану" position="1">
                            <else>
<showMessage type="expression" message="предмет.описание" carriageReturn="true" beginWithCap="false" position="1"/>
                            </else>
                            <then>
<showMessage type="text" message="Твёрдая сухая лиана." carriageReturn="true" beginWithCap="false" position="1"/>
                            </then>
                        </if>
                    </instructions>
                </hook>
                <hook type="instead" objectElement="предмет" action="взять">
                    <instructions>
                        <if condition="СрубилЛиану" position="1">
                            <else>
<showMessage type="text" message="Вы попытались выдернуть лиану голыми руками, но ничего не вышло." carriageReturn="true" beginWithCap="false" position="1"/>
                            </else>
                            <then>
<showMessage type="text" message="Вы уже срубили и взяли лиану." carriageReturn="true" beginWithCap="false" position="1"/>
                            </then>
                        </if>
                    </instructions>
                </hook>
            </hooks>
            <properties/>
            <roles/>
            <attributes>
                <attribute>частьПейзажа</attribute>
                <attribute>прикреплён</attribute>
            </attributes>
            <description>Старая засохшая лиана растёт из земли.</description>
            <words mainWord="лиана">
                <word>лиана</word>
            </words>
            <startingPosition>
                <locations>
                    <location>Растительность</location>
                </locations>
                <inventory>false</inventory>
            </startingPosition>
        </item>
    </items>
    <actions>
        <action name="срубить" description="срубить|срезать [что] [чем]">
            <templates>
                <template>
                    <literalElement parameter="глагол" position="1">
                        <synonym>срубить</synonym>
                        <synonym>срезать</synonym>
                    </literalElement>
                    <objectElement case="vp" parameter="что" position="2"/>
                    <objectElement case="tp" parameter="чем" position="3"/>
                </template>
                <template>
                    <literalElement parameter="глагол" position="1">
                        <synonym>срубить</synonym>
                        <synonym>срезать</synonym>
                    </literalElement>
                    <objectElement case="tp" parameter="чем" position="2"/>
                    <objectElement case="vp" parameter="что" position="3"/>
                </template>
            </templates>
            <procedureCall procedure="срубить"/>
            <restrictions>
                <restriction condition="не что.прикреплён">
                    <reaction>
                        <showMessage type="expression" message="'Разве ' + что + ' к чему-то прикреплен(а), чтобы ' + глагол + '?'" carriageReturn="true" beginWithCap="false" position="1"/>
                    </reaction>
                </restriction>
            </restrictions>
        </action>
        <action name="отл">
            <templates>
                <template>
                    <literalElement parameter="ком" position="1">
                        <synonym>го</synonym>
                        <synonym>т</synonym>
                    </literalElement>
                </template>
            </templates>
            <procedureCall procedure="отл"/>
            <restrictions/>
        </action>
    </actions>
</story>
